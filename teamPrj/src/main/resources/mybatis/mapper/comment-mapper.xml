<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.teamPrj.dao.ICommentDao">
  <select id="getComment" resultType="com.example.teamPrj.dto.CommentDto">
    SELECT * FROM comment_tbl WHERE bno = #{bno}
  </select>
  
  <insert id="regComment">
  	INSERT INTO comment_tbl (content, writer, bno, regtime) VALUES (#{content}, #{writer}, #{bno}, NOW())
  </insert>
  
  <delete id="deleteComment">
  	DELETE FROM comment_tbl WHERE bno = #{bno}
  </delete>
</mapper>